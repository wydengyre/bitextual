{
	"name": "@bitextual/web",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"build": "npm-run-all --parallel build-css build-deps build-main build-epub-worker build-lang-worker build-index build-static build-worker build-sample",
		"build-css": "tsx tools/copy-css.ts",
		"build-deps": "tsx tools/copy-deps.ts",
		"build-index": "tsx tools/build-index.ts",
		"build-main": "esbuild src/main.ts --bundle --minify --sourcemap --format=esm --outfile=dist/main.js",
		"build-epub-worker": "esbuild src/epub-worker.ts --bundle --minify --sourcemap --format=esm --outfile=dist/epub-worker.js",
		"build-lang-worker": "esbuild src/lang-worker.ts --bundle --minify --sourcemap --format=esm --outfile=dist/lang-worker.js",
		"build-sample": "tsx tools/build-sample.ts",
		"build-static": "mkdir -p dist && cp -R static/* dist",
		"build-worker": "esbuild src/worker.ts --bundle --minify --sourcemap --format=esm --external:module --outfile=dist/worker.js",
		"clean": "rm -rf build dist",
		"typecheck": "npm run typecheck-lib && npm run typecheck-tools",
		"typecheck-lib": "tsc",
		"typecheck-tools": "tsc --project tools/tsconfig.json"
	},
	"type": "module",
	"devDependencies": {
		"@bitextual/cli": "*",
		"@tsconfig/strictest": "2.0.3",
		"@types/html-to-text": "9.0.4",
		"@types/lodash-es": "4.17.12",
		"@types/node": "20.11.25",
		"esbuild": "0.20.1",
		"npm-run-all": "4.1.5",
		"simple-git": "3.22.0",
		"tsx": "4.7.1",
		"typescript": "5.4.2"
	},
	"dependencies": {
		"@bitextual/core": "*",
		"@bitextual/epub": "*",
		"@codemirror/commands": "^6.3.3",
		"@codemirror/state": "^6.4.1",
		"@codemirror/view": "^6.25.1",
		"@picocss/pico": "2.0.6",
		"franc-min": "^6.2.0",
		"lodash-es": "^4.17.21"
	}
}
