{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": ["@tsconfig/strictest/tsconfig.json"],
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"target": "esnext",
		"allowImportingTsExtensions": true
	},
	"include": ["**/*.ts"],
	"exclude": ["*.test.ts"]
}
