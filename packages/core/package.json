		"typecheck-test": "tsc --project tsconfig.test.json"
	},
	"type": "module",
	"devDependencies": {
		"@bitextual/test": "*",
		"@tsconfig/strictest": "2.0.5",
		"@types/html-to-text": "9.0.4",
		"@types/node": "22.10.7",
		"tsx": "4.19.2",
		"typescript": "5.7.3"
	},
	"dependencies": {
		"@bitextual/hunalign": "^0.0.3",
		"@xmldom/xmldom": "^0.9.7",
		"html-to-text": "^9.0.5",
		"jszip": "^3.10.1"
	}
}
