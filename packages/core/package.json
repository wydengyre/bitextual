{
	"name": "@bitextual/core",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"test": "tsx --tsconfig ./tsconfig.json --test '**/*.test.ts'",
		"test-only": "tsx --tsconfig ./tsconfig.json --test --test-only '**/*.test.ts'",
		"typecheck": "npm run typecheck-lib && npm run typecheck-test",
