{
	"name": "@bitextual/cli",
	"version": "0.0.2",
	"private": true,
	"main": "main.ts",
	"scripts": {
		"test": "tsx --tsconfig ./tsconfig.json --test '**/*.test.ts'",
		"test-only": "tsx --tsconfig ./tsconfig.json --test --test-only '**/*.test.ts'",
		"typecheck": "npm run typecheck-lib && npm run typecheck-test",
		"typecheck-lib": "tsc",
		"typecheck-test": "tsc --project tsconfig.test.json"
	},
	"type": "module",
	"devDependencies": {
		"@bitextual/test": "*",
		"@tsconfig/strictest": "2.0.5",
		"@types/js-beautify": "^1.14.3",
		"@types/node": "22.15.18",
		"tsx": "4.19.4",
		"typescript": "5.8.3"
	},
	"dependencies": {
		"@bitextual/core": "*",
		"franc-min": "^6.2.0",
		"js-beautify": "1.15.4"
	}
}
