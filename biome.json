{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"files": {
		"include": ["*.json", "packages/**/*.ts", "packages/**/*.json"],
		"ignore": [
			"packages/cf/.wrangler",
			"packages/punkt/data",
			"packages/web/build",
			"packages/web/dist",
			"packages/wiktionary/raw-wiktextract-data.json"
		]
	}
}
